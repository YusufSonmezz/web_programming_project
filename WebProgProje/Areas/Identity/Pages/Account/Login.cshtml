@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<header id="head" class="secondary"></header>

<div class="row">
    <header class="page-header">
        <h1 class="page-title">&nbsp;&nbsp;Giriş Yap</h1>
    </header>

    <!-- Article main content -->
    <article class="col-xs-12 maincontent">

        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3 class="thin text-center">Hesabına Giriş Yap</h3>
                    <p class="text-center text-muted">Eğer henüz kayıt olmadıysan, hemen <a asp-area="Identity" asp-page="/Account/Register">Buraya tıkla</a> ve Kayıt ol.</p>
                    <hr>

                    <form id="account" method="post">
                        <div class="top-margin">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="top-margin">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <hr>

                        <div class="row">
                            <div class="col-lg-8">
                                <b><a href="">Forgot password?</a></b>
                            </div>
                            <div class="col-lg-4 text-right">
                                <button class="btn btn-action" type="submit">Giriş Yap</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>

    </article>
    <!-- /Article -->

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
