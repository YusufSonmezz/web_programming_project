@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<header id="head" class="secondary"></header>

<div class="row">
    <header class="page-header">
        <h1 class="page-title">&nbsp;&nbsp;Kayıt Ol</h1>
    </header>

    <!-- Article main content -->
    <article class="col-xs-12 maincontent">

        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3 class="thin text-center">Yeni Hesap Oluştur</h3>
                    <p class="text-center text-muted">Eğer zaten bir hesabın varsa, <a asp-area="Identity" asp-page="/Account/Login">Buraya Tıkla</a> ve kolayca hesabına giriş yap.</p>
                    <hr>

                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="top-margin">
                            <label asp-for="Input.UserFirstName"></label>
                            <input asp-for="Input.UserFirstName" class="form-control" />
                            <span asp-validation-for="Input.UserFirstName" class="text-danger"></span>
                        </div>
                        <div class="top-margin">
                            <label asp-for="Input.UserLastName"></label>
                            <input asp-for="Input.UserLastName" class="form-control" />
                            <span asp-validation-for="Input.UserLastName" class="text-danger"></span>
                        </div>
                        <div class="top-margin">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="row top-margin">
                            <div class="col-sm-6">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <label asp-for="Input.ConfirmPassword"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <hr>
                        <div class="col-lg-4 text-right">
                            <button class="btn btn-action" type="submit">Register</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>

    </article>
    <!-- /Article -->


    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
