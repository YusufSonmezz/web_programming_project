@using Microsoft.AspNetCore.Identity
@inject SignInManager<UserInfo> SignInManager
@inject UserManager<UserInfo> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a  class="btn" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Merhaba @User.Identity.Name!</a>
    </li>
    <li>
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Çıkış Yap</button>
        </form>
    </li>
}
else
{
    <li>
        <a class="btn" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol</a>
    </li>
    <li>
        <a class="btn" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a>
    </li>
}
