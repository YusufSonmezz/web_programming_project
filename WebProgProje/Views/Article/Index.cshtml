@model List<Article>

    <style>
        .center {
            margin: auto;
            width: 60%;
            border: 2px solid black;
            border-radius: 15px;
            padding: 10px;
            background-color: #F0F8FF;
        }
    </style>

<div class="col-sm-8" style="margin-top: 10px;">


    @foreach (var article in Model)
    {
        <div class="center">
            <div>
                <h3>@article.Title</h3>
            </div>
            <div>
                <img src="~/images/@article.Image" width="400" height="250" />
            </div>
            <div style="margin-top: 5px;margin-bottom: 5px;">
                <i class="fa fa-clock-o"></i>
                @article.DateOfAdding
            </div>
            <div>
                <i>@article.Description</i>
            </div>
            <div>
                <form asp-controller="Article" asp-action="Detail" method="get">
                    <button class="btn btn-info" type="submit" asp-controller="Article" asp-action="Detail" asp-route-id="@article.ArticleId">Detay</button>
                </form>
            </div>
        </div>
        <br />
        <br />
      }
</div>
